<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="controller.GuestsInfoController" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: #fefae0;">

    <VBox layoutX="180" layoutY="50" spacing="25" alignment="CENTER"
          prefWidth="440"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 14; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 6);">

        <!-- عنوان -->
        <Label text="Guest Information"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e2e2e;" />

        <!-- فرم اطلاعات -->
        <GridPane hgap="10" vgap="20">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="160"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Check-In Date:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="checkInDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Check-Out Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="checkOutDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Number of Guests:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Spinner fx:id="guestCountSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- دکمه‌ها -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="viewRulesBtn" text="📄 View Rules"
                    onAction="#handleViewRules"
                    style="-fx-background-color: #90CAF9; -fx-text-fill: white; -fx-background-radius: 8;" />

            <Button fx:id="continueBtn" text="➡ Continue"
                    onAction="#handleContinue"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />

        </HBox>
    </VBox>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane  fx:controller="controller.SearchGuestController" xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f8f1e5;">

    <VBox layoutX="180" layoutY="60" spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          prefWidth="440">

        <Label text="Find Your Guest"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e2e2e;" />

        <Label text="Enter guest name or phone number:"
               style="-fx-font-size: 14px; -fx-text-fill: #444;" />

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Name or Phone" prefWidth="220" />
            <Button fx:id="searchGuestBtn" text="Search"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;" onAction="#handleSearch"/>
        </HBox>
    </VBox>


    <TableView fx:id="guestTable" layoutX="100" layoutY="260" prefWidth="600" prefHeight="240"
               style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="180"/>
            <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="180"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="160"/>
            <TableColumn fx:id="addressColumn" text="Status" prefWidth="80"/>
        </columns>
    </TableView>


    <Button fx:id="backBtn" text="Back"
            layoutX="350" layoutY="530" prefWidth="100"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 8;" onAction="#handleBack"/>

</AnchorPane>

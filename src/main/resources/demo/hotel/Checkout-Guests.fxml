<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:controller="controller.CheckOutController" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: #fdf6e3;">

    <HBox layoutX="200" layoutY="20" spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Search by name or phone" prefWidth="300"/>
        <Button text="Search Guest" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;" onAction="#handleSearch"/>
    </HBox>

    <VBox fx:id="detailsBox" layoutX="200" layoutY="60" spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 4);"
          prefWidth="400" visible="false" managed="false">

        <Label text="Guest Check-Out"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2e2e2e;" />

        <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Guest Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="guestNameLabel" text="John Doe" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Room Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="roomTypeLabel" text="Deluxe" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Stay Duration:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="stayDurationLabel" text="3 nights" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Price Before Discount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="priceLabel"  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Apply Discount (%):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="discountField" promptText="e.g. 10" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Total After Discount:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="finalPriceLabel"  style="-fx-font-weight: bold;"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <!-- Buttons -->
    <HBox layoutX="0" layoutY="450" prefWidth="800" spacing="20" alignment="CENTER">
        <Button fx:id="backBtn" text="Back" prefWidth="120"
                style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-background-radius: 6;"
                onAction="#handleBack"/>
        <Button fx:id="confirmBtn" text="Confirm Check-Out" prefWidth="160"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6;"
                visible="false" managed="false" disable="true" onAction="#handleConfirm"/>
    </HBox>


</AnchorPane>

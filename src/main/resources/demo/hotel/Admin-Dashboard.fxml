<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:controller="controller.AdminDashboardController" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #f8f1e5;">
    <VBox layoutX="180" layoutY="30" spacing="10"
          style="-fx-background-color: #fff6dd; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-padding: 15;"
          alignment="CENTER" prefWidth="440">
        <Label text="Welcome, Admin 👋"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label text="Select an action from the dashboard below:"
               style="-fx-font-size: 13px;" />
    </VBox>
    <Button  fx:id="logoutBtn" layoutX="680" layoutY="20" style="-fx-background-color: transparent; -fx-text-fill: #444;" text="🔒 Admin Logout" onAction="#handleLogout" />

    <GridPane layoutX="160" layoutY="170" hgap="30" vgap="20" alignment="CENTER">



        <Button fx:id="searchGuestBtn" text="🔍 Search Guest" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="0" GridPane.columnIndex="0"
                style="-fx-background-color: #444; -fx-text-fill: white;" onAction="#handleSearchGuest" />

        <Button fx:id="checkOutBtn" text="🧾 Check Out Guest" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="1" GridPane.columnIndex="0"
                style="-fx-background-color: #fca311; -fx-text-fill: white;" onAction="#handleCheckOutGuest"/>

        <Button fx:id="viewFeedbackBtn" text="💬 View Feedback" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="2" GridPane.columnIndex="0"
                style="-fx-background-color: #457b9d; -fx-text-fill: white;" onAction="#handleViewFeedback"/>

        <Button fx:id="newReservationBtn" text="➕ New Reservation" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="0" GridPane.columnIndex="1"
                style="-fx-background-color: #2a9d8f; -fx-text-fill: white;" onAction="#handleNewReservation"/>

        <Button text="❌ Cancel Booking" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="1" GridPane.columnIndex="1"
                style="-fx-background-color: #e63946; -fx-text-fill: white;" onAction="#handleCancelBooking"/>

        <Button text="🔄 Update Booking" prefWidth="220" prefHeight="90"
                GridPane.rowIndex="2" GridPane.columnIndex="1"
                style="-fx-background-color: #6d6875; -fx-text-fill: white;" onAction="#handleUpdateBooking"/>


    </GridPane>

</AnchorPane>
